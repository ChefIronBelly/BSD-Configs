# KEYBINDINGS
bindsym $mod+b exec --no-startup-id SAVE_NAME=$(date +%F-%T).png && maim "$HOME/Pictures/Screenshots/$SAVE_NAME" && echo ~/Pictures/Screenshots/$SAVE_NAME
bindsym $mod+Shift+b exec --no-startup-id SAVE_NAME=$(date +%F-%T).png && maim -s "$HOME/Pictures/Screenshots/$SAVE_NAME" && echo ~/Pictures/Screenshots/$SAVE_NAME
bindsym $mod+Shift+q exec --no-startup-id autorandr --change
bindsym $mod+z [urgent=latest] focus
bindsym $mod+x exec chromium
bindsym $mod+m exec qutebrowser
bindsym $mod+y exec spotify
bindsym $mod+n exec telegram
bindsym $mod+comma exec urxvtc -name "transparent-term" -bg [55]#2b303b -depth 32
bindsym $mod+Shift+comma exec urxvtc -name "transparent-nofloat-term" -bg [55]#2b303b -depth 32
bindsym $mod+minus scratchpad show
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+Mod4+j exec --no-startup-id xbacklight -dec 3
bindsym $mod+Mod4+k exec --no-startup-id xbacklight -inc 3
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 1 +5% && killall -USR1 i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 1 -5% && killall -USR1 i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute alsa_output.pci-0000_00_1b.0.analog-stereo toggle && killall -USR1 i3status
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause
bindsym XF86AudioNext exec --no-startup-id playerctl next
bindsym XF86AudioPrev exec --no-startup-id playerctl previous
bindsym XF86AudioStop exec --no-startup-id playerctl stop

