#
# ~/.gitconfig
#

[core]
  pager = less -SR

[user]
  email = chefiron@teknik.io
  name = ChefIronBelly

[merge]
  conflictstyle = diff3

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[alias]
  st = status
  ci = commit
  br = branch
  co = checkout
  df = diff
  lg = log --oneline --graph --decorate
  aa = add
  fe = fetch
  mr = merge
  pu = push
  cl = clone

[push]
  default = current
