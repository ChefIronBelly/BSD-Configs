#!/bin/mksh

alias h='fc -l'
alias p='pwd'
alias j=jobs
alias m=$PAGER
alias ll='colorls -laFoG'
alias l='colorls -lfG'
alias g='egrep -i'
alias preview='feh -g 450x300+500+200 -R .01 --zoom fill'
#alias rec='ffmpeg2 -f x11grab -s 1280x800 -an -i :0.0 -c:v libvpx -b:v 5M -crf 10 -quality realtime -y -loglevel quiet'
alias rec='ffmpeg2 -f x11grab -s 1440x900 -an -i :0.0 -c:v libvpx -b:v 5M -crf 10 -quality realtime -y -loglevel quiet'
alias info='info.sh'
alias todo='vi ~/todo'
alias rnet='sudo sh /etc/netstart'
alias shutdown='sudo /sbin/shutdown -p now "going down"'
alias zzz='xlock'
alias shootme='DISPLAY=:0 import -window root ~/Pictures/scrots/scrot-$(date +%m-%d-%Y-%H-%M-%S).png'
alias cp='cp -ip'
alias mv='mv -i'
alias rm='rm -i'
alias free='top -n 1 | head -n 5 | tail -n 2'
alias blankf='cdrecord dev=/dev/rcd0d blank=fast'
alias blanka='cdrecord dev=/dev/rcd0d blank=all'
alias rip='sudo cdparanoia -g /dev/rcd0d -B'
alias weather='curl -4 http://wttr.in'

PS1=""
 case `id -u` in
 	0) PS1="${PS1}# ";;
 	*) PS1="${PS1}$ ";;
 esac

# Colored man pages
man() {
    env LESS_TERMCAP_mb=$'\E[01;31m' \
    LESS_TERMCAP_md=$'\E[01;38;5;74m' \
    LESS_TERMCAP_me=$'\E[0m' \
    LESS_TERMCAP_se=$'\E[0m' \
    LESS_TERMCAP_so=$'\E[38;5;246m' \
    LESS_TERMCAP_ue=$'\E[0m' \
    LESS_TERMCAP_us=$'\E[04;38;5;146m' \
    man "$@"
}
