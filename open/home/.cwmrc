#
# ~/.cwmrc
#

# set font
fontname "-*-ohsnap.icons-medium-r-*-*-14-*-*-*-*-*-*-*"

# set border width
borderwidth 4

# colors
color activeborder   '#c4bbb0'
color inactiveborder '#413f43'
color menubg         '#282a36'
color menufg         '#f8f8f2'
color font           '#f8f8f2'
color selfont        '#282a36'

# faster
moveamount 10

# autogroups
autogroup 1 Pidgin
autogroup 1 Mumble
autogroup 2 Firefox
autogroup 3 mpv

# menu
command term   /usr/local/bin/xterm
command surf   /usr/local/bin/firefox
command lock   /usr/local/bin/slock

# binds
bind SM-Return xterm
bind SM-s     status.sh
bind SM-f     firefox
bind SM-g     geany
bind SM-d 	  dmenu_start.sh
bind SM-r     dmenu_soma.sh
bind SM-x     dmenu_xset.sh
bind SM-q     dmenu_exit.sh
bind M-0 	  volume.sh 0

bind 4-v      vmaximize
bind 4-b      hmaximize
bind 4-f      maximize
bind 4S-h     resizeleft
bind 4S-j     resizedown
bind 4S-k     resizeup
bind 4S-l     resizeright
bind 4MS-h    bigresizeleft
bind 4MS-j    bigresizedown
bind 4MS-k    bigresizeup
bind 4MS-l    bigresizeright

bind 4-h      moveleft
bind 4-j      movedown
bind 4-k      moveup
bind 4-l      moveright
bind 4C-h     bigmoveleft
bind 4C-j     bigmovedown
bind 4C-k     bigmoveup
bind 4C-l     bigmoveright

bind 4-comma  label
bind 4S-e     delete

bind 4-Tab    cycle
bind 4S-Tab   rcycle

bind 4-g      grouptoggle
bind 4MC-l    cyclegroup
bind 4MC-h    rcyclegroup
bind 4-1      group1
bind 4-2      group2
bind 4-3      group3
bind 4-4      group4
bind 4-5      group5
bind 4-6      group6
bind 4-7      group7
bind 4-8      group8
bind 4-9      group9
bind 4-0      nogroup
bind 4M-1     grouponly1
bind 4M-2     grouponly2
bind 4M-3     grouponly3
bind 4M-4     grouponly4
bind 4M-5     grouponly5
bind 4M-6     grouponly6
bind 4M-7     grouponly7
bind 4M-8     grouponly8
bind 4M-9     grouponly9

bind 4C-r     restart
bind 4C-q     quit

bind 4-d      exec
bind 4-s      search

bind M-Left   unbind
bind M-Right  unbind
bind M-Return unbind

# mousebinds
mousebind 4-1 window_move
mousebind 4-2 window_grouptoggle
mousebind 4-3 window_resize
