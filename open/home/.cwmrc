#
# ~/.cwmrc
#

# set font
fontname "-*-ohsnap.icons-medium-r-*-*-14-*-*-*-*-*-*-1"

# set border width
borderwidth 4

# gaps
gap 10 10 10 10

# stick it
sticky yes

# colors
color activeborder   '#a89984'
color inactiveborder '#282828'
color menubg         '#282828'
color menufg         '#ebdbb2'
color font           '#ebdbb2'
color selfont        '#282a36'

# faster
moveamount 10

# autogroups
autogroup 1 "st-256color,tmux"
autogroup 2 Firefox
autogroup 3 Geany
autogroup 4 mpv

# menu
command box    "st -g 80x24+123+284"
command surf   firefox
command xlock  slock

# binds
bind 4-Return "st -g 80x24+123+284" # middle left
bind 4-t      "st -g 80x24+743+284 -e \"tmux\"" # middle right
bind 4-n      "st -g 95x60+30+30"   # left 50%
bind 4-m      "st -g 95x60+733+30"  # right 50%
bind 4-comma  "st -g 195x29+30+30"  # top 50%
bind 4-period "st -g 195x29+30+470" # bottom 50%
bind SM-s     status.sh
bind SM-f     firefox
bind SM-g     geany
bind SM-d     dmenu_start.sh
bind SM-r     dmenu_soma.sh
bind SM-x     dmenu_xset.sh
bind M-0      "volume.sh 0" # audio mute toggle
bind M-minus  "volume.sh -" # audio lower
bind M-equal  "volume.sh +" # audio raise
bind M-u      uptime.sh

bind 4-v      vmaximize
bind 4-b      hmaximize
bind 4-f      maximize
bind 4S-h     resizeleft
bind 4S-j     resizedown
bind 4S-k     resizeup
bind 4S-l     resizeright
bind 4MS-h    bigresizeleft
bind 4MS-j    bigresizedown
bind 4MS-k    bigresizeup
bind 4MS-l    bigresizeright

bind 4-h      moveleft
bind 4-j      movedown
bind 4-k      moveup
bind 4-l      moveright
bind 4C-h     bigmoveleft
bind 4C-j     bigmovedown
bind 4C-k     bigmoveup
bind 4C-l     bigmoveright

bind 4S-comma label
bind 4S-e     delete

bind 4-Tab    cycle
bind 4S-Tab   rcycle

bind 4-g      grouptoggle
bind 4MC-l    cyclegroup
bind 4MC-h    rcyclegroup
bind 4-1      group1
bind 4-2      group2
bind 4-3      group3
bind 4-4      group4
bind 4-5      group5
bind 4-6      group6
bind 4-7      group7
bind 4-8      group8
bind 4-9      group9
bind 4-0      nogroup
bind 4M-1     grouponly1
bind 4M-2     grouponly2
bind 4M-3     grouponly3
bind 4M-4     grouponly4
bind 4M-5     grouponly5
bind 4M-6     grouponly6
bind 4M-7     grouponly7
bind 4M-8     grouponly8
bind 4M-9     grouponly9

bind 4C-r     restart
bind 4C-q     quit

bind 4-d      exec
bind 4-s      search

bind M-Left   unbind
bind M-Right  unbind
bind M-Return unbind

# mousebinds
mousebind 4-1 window_move
mousebind 4-2 window_grouptoggle
mousebind 4-3 window_resize
